{
    "id": "org.freedesktop.Sdk.Extension.haskell",
    "branch": "20.08",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "20.08",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "separate-locales": false,
    "appstream-compose": false,
    "build-options": {
        "prepend-ld-library-path": "/usr/lib/sdk/haskell/lib/",
        "prefix": "/usr/lib/sdk/haskell"
    },
    "modules": [
        {
            "name": "ncurses",
            "no-autogen": true,
            "config-opts": [
                "--prefix=${FLATPAK_DEST}",
                "--with-shared",
                "--with-termlib=tinfo",
                "--with-versioned-syms"
            ],
            "make-install-args": [
                "install.libs"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/share/man",
                "/lib/*.a",
                "/lib/*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/ncurses/ncurses-6.3.tar.gz",
                    "sha256": "97fc51ac2b085d4cde31ef4d2c3122c21abc217e9090a43a30fc5ec21684e059",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 234776,
                        "stable-only": true,
                        "url-template": "https://ftp.gnu.org/gnu/ncurses/ncurses-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libnuma",
            "buildsystem": "autotools",
            "make-args": [
                "install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/numactl/numactl.git",
                    "tag": "v2.0.17",
                    "commit": "c1165896572b74e971d817909bf652066ddf801a",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "ghc",
            "buildsystem": "autotools",
            "make-args": [
                "install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://downloads.haskell.org/ghc/9.8.1/ghc-9.8.1-aarch64-deb10-linux.tar.xz",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/ghc/latest/",
                        "version-pattern": "ghc-([\\d.]+)[\\S]+\\.tar\\.xz",
                        "url-template": "https://downloads.haskell.org/ghc/$version/ghc-$version-aarch64-deb10-linux.tar.xz"
                    },
                    "sha256": "aab7af72614f8bf9ca624407aa4dbc69bc009c2b4cc1a0f3c062008db81bdb95"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://downloads.haskell.org/ghc/9.8.1/ghc-9.8.1-x86_64-deb10-linux.tar.xz",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/ghc/latest/",
                        "version-pattern": "ghc-([\\d.]+)[\\S]+\\.tar\\.xz",
                        "url-template": "https://downloads.haskell.org/ghc/$version/ghc-$version-x86_64-deb10-linux.tar.xz"
                    },
                    "sha256": "d498657ca00514bc4620b591f74b93f9a3b64e5282e5c4e2876a734c130f1fbf"
                }
            ]
        },
        {
            "name": "cabal",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://downloads.haskell.org/cabal/cabal-install-3.10.2.0/cabal-install-3.10.2.0-aarch64-linux-deb10.tar.xz",
                    "strip-components": 0,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/cabal/cabal-install-latest/",
                        "version-pattern": "cabal-install-([\\d.]+)[\\S]+\\.tar\\.xz",
                        "url-template": "https://downloads.haskell.org/cabal/cabal-install-$version/cabal-install-$version-aarch64-linux-deb10.tar.xz"
                    },
                    "sha256": "004ed4a7ca890fadee23f58f9cb606c066236a43e16b34be2532b177b231b06d"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://downloads.haskell.org/cabal/cabal-install-3.10.2.0/cabal-install-3.10.2.0-x86_64-linux-deb10.tar.xz",
                    "strip-components": 0,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/cabal/cabal-install-latest/",
                        "version-pattern": "cabal-install-([\\d.]+)[\\S]+\\.tar\\.xz",
                        "url-template": "https://downloads.haskell.org/cabal/cabal-install-$version/cabal-install-$version-x86_64-linux-deb10.tar.xz"
                    },
                    "sha256": "bdeb27c008b09c3b86f8a2768018d62a1aee02565304d123fda87ed432549418"
                }
            ],
            "build-commands": [
                "install -C ./cabal ${FLATPAK_DEST}/bin/"
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/haskell/bin",
                        "export LIBRARY_PATH=$LIBRARY_PATH:/usr/lib/sdk/haskell/lib"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "build-commands": [
                "cp enable.sh ${FLATPAK_DEST}"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.haskell.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose --basename=org.freedesktop.Sdk.Extension.haskell --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.haskell"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.haskell.appdata.xml"
                }
            ]
        }
    ]
}
