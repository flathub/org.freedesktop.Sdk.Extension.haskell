{
    "id": "org.freedesktop.Sdk.Extension.haskell",
    "branch": "20.08",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "20.08",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "separate-locales": false,
    "appstream-compose": false,
    "build-options": {
        "prepend-ld-library-path": "/usr/lib/sdk/haskell/lib/",
        "prefix": "/usr/lib/sdk/haskell"
    },
    "modules": [
        {
            "name": "libtinfo.so.5",
            "buildsystem": "simple",
            "only-arches": [
                "aarch64"
            ],
            "build-commands": [
                "install -d /usr/lib/sdk/haskell/lib/",
                "ln -s /usr/lib/*-linux-gnu*/libtinfo.so.6 /usr/lib/sdk/haskell/lib/libtinfo.so.5"
            ]
        },
        {
            "name": "libnuma",
            "buildsystem": "autotools",
            "make-args": [
                "install"
            ],
            "only-arches": [
                "aarch64"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/numactl/numactl.git",
                    "tag": "v2.0.14",
                    "commit": "dd6de072c92c892a86e18c0fd0dfa1ba57a9a05d",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "ghc",
            "buildsystem": "autotools",
            "make-args": [
                "install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://downloads.haskell.org/~ghc/latest/ghc-9.2.1-aarch64-deb10-linux.tar.xz",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/~ghc/latest/",
                        "version-pattern": "ghc-([\\d.]+)-src.tar.xz",
                        "url-template": "https://downloads.haskell.org/~ghc/latest/ghc-$version-aarch64-deb10-linux.tar.xz"
                    },
                    "sha256": "717d4246a8b407a807048ce6eddb2785aca2e4c73b6b634c01e1726f42d539a1"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://downloads.haskell.org/~ghc/latest/ghc-9.2.1-x86_64-deb10-linux.tar.xz",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/~ghc/latest/",
                        "version-pattern": "ghc-([\\d.]+)-src.tar.xz",
                        "url-template": "https://downloads.haskell.org/~ghc/latest/ghc-$version-x86_64-deb10-linux.tar.xz"
                    },
                    "sha256": "53f1650ed092230480ff5750b94f409e5dfe66bd07ced00bbbcdf5d6b180234c"
                }
            ]
        },
        {
            "name": "cabal",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://downloads.haskell.org/cabal/cabal-install-latest/cabal-install-3.6.2.0-aarch64-linux-deb10.tar.xz",
                    "strip-components": 0,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/~cabal/cabal-install-latest/",
                        "version-pattern": "cabal-install-([\\d.]+).tar.gz",
                        "url-template": "https://downloads.haskell.org/cabal/cabal-install-latest/cabal-install-$version-aarch64-linux-deb10.tar.xz"
                    },
                    "sha256": "d9acee67d4308bc5c22d27bee034d388cc4192a25deff9e7e491e2396572b030"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://downloads.haskell.org/cabal/cabal-install-latest/cabal-install-3.6.2.0-x86_64-linux-deb10.tar.xz",
                    "strip-components": 0,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://downloads.haskell.org/~cabal/cabal-install-latest/",
                        "version-pattern": "cabal-install-([\\d.]+).tar.gz",
                        "url-template": "https://downloads.haskell.org/cabal/cabal-install-latest/cabal-install-$version-x86_64-linux-deb10.tar.xz"
                    },
                    "sha256": "e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855"
                }
            ],
            "build-commands": [
                "install -C ./cabal ${FLATPAK_DEST}/bin/"
            ]
        },
        {
            "name": "stack",
            "buildsystem": "simple",
            "only-arches": [
                "x86_64"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/commercialhaskell/stack/releases/download/v2.7.3/stack-2.7.3-linux-x86_64.tar.gz",
                    "sha256": "a6c090555fa1c64aa61c29aa4449765a51d79e870cf759cde192937cd614e72b",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ],
            "build-commands": [
                "install -C ./stack ${FLATPAK_DEST}/bin/"
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/haskell/bin"
                    ],
                    "dest-filename": "enable.sh"
                }
            ],
            "build-commands": [
                "cp enable.sh ${FLATPAK_DEST}"
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.haskell.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose --basename=org.freedesktop.Sdk.Extension.haskell --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.haskell"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.haskell.appdata.xml"
                }
            ]
        }
    ]
}